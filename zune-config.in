#!/bin/sh

# loosely ripped on gtk-config :-/

glib_libs=""
glib_cflags=""
glib_thread_libs="@glib_thread_libs@"
glib_thread_cflags="@glib_thread_cflags@"

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: zune-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
Libraries:
	zune
	gthread
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

lib_zune=yes

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @ZUNE_VERSION@
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    zune)
      lib_zune=yes
      ;;
    gthread)
      lib_gthread=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$lib_gthread" = "yes"; then
      glib_cflags="$glib_thread_cflags"
      glib_libs="$glib_thread_libs"
fi

if test "$echo_cflags" = "yes"; then
      imflags=`imlib-config --cflags-gdk`
      if test @includedir@ != /usr/include ; then
        includes=-I@includedir@
        for i in $imflags ; do
          if test $i = -I@includedir@ ; then
            includes=""
          fi
        done
      fi
      echo "$includes $imflags $glib_cflags"
fi

if test "$echo_libs" = "yes"; then
      libdirs=-L@libdir@
      my_libs="$libdirs -lmuimaster -ltagitem -lamilist `imlib-config --libs-gdk`"
      echo $my_libs $glib_libs | sed s/-lgtk//g
fi      

